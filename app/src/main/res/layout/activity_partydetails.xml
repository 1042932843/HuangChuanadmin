<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_bar"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout style="@style/ListItem">

                <TextView
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="类型" />

                <TextView
                    android:padding="8dp"
                    android:id="@+id/type"
                    style="@style/ListItemEdit"
                    android:layout_marginLeft="60dp"
                    android:singleLine="false" />

            </LinearLayout>

            <View style="@style/Divider.Vertical" />

            <LinearLayout
                style="@style/ListItem"
                android:gravity="center">

                <TextView
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="内容" />

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View style="@style/Divider.Vertical" />

            <LinearLayout style="@style/ListItem">

                <TextView
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="村镇名" />

                <TextView
                    android:padding="8dp"
                    android:id="@+id/areaName"
                    style="@style/ListItemEdit"
                    android:layout_marginLeft="60dp" />
            </LinearLayout>

            <View style="@style/Divider.Vertical" />

            <LinearLayout
                style="@style/ListItem"
                android:gravity="center">

                <TextView
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="联系人姓名" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>


            <View style="@style/Divider.Vertical" />

            <LinearLayout
                style="@style/ListItem"
                android:gravity="center">

                <TextView
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="联系人电话" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View style="@style/Divider.Vertical" />


            <LinearLayout
                style="@style/ListItem"
                android:gravity="center">

                <TextView
                    android:id="@+id/date"
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/createDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View style="@style/Divider.Vertical" />


            <LinearLayout
                android:id="@+id/ddblayout"
                style="@style/ListItem"
                android:gravity="center">

                <TextView
                    android:id="@+id/ddb"
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="党代表姓名" />

                <TextView
                    android:id="@+id/ddbname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

            <View style="@style/Divider.Vertical" />
            <LinearLayout
                android:id="@+id/jg"
                style="@style/ListItem"
                android:gravity="center">

                <TextView
                    style="@style/ListItemText"
                    android:layout_marginLeft="10dp"
                    android:text="处理结果" />

                <EditText
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="@null"
                    android:maxLength="300"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/padding_xlarge"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/qd"
                    style="@style/Button"
                    android:layout_weight="1"
                    android:text="确认" />

                <Button
                    android:id="@+id/sc"
                    style="@style/Button"
                    android:layout_weight="1"
                    android:text="删除" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

