<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header"
        style="@style/Header">

        <ImageView
            android:id="@+id/back"
            style="@style/HeaderBack" />

        <TextView
            android:id="@+id/headerTitle"
            style="@style/HeaderTitle"
            android:text="登录" />

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/logo" />

                <!--<View
                    style="@style/Divider.Vertical"
                    android:layout_marginTop="10dp" />-->

                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/radiobutton_background_dl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_min_height">



                    <EditText
                        android:background="@null"
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_min_height"
                        android:hint="请输入用户名"
                        android:maxLength="18"
                        android:paddingLeft="20dp"
                        android:paddingRight="@dimen/padding_xxlarge"
                        android:singleLine="true"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/font_size_normal" />


                </RelativeLayout>


                        <View
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            style="@style/Divider.Vertical" />

                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/radiobutton_background_dl1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_min_height">



                    <EditText
                        android:background="@null"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_item_min_height"
                        android:digits="0123456789abcdefghigjklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/font_size_normal" />
                </RelativeLayout>

                <!--  <View
                      style="@style/Divider.Vertical" />
  -->

                <Button
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:id="@+id/login"
                    style="@style/Button1"
                    android:layout_marginTop="20dp"
                    android:text="登录" />


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</LinearLayout>